<div class="container"> 
    <div>
    <h1>Compose</h1>
        <form action="/posts/edit/:<%= post.title %>" method="post">
            <label for="title">Title</label><br>
            <input type="text" id="title" name="title" value="<%= post.title %>"><br>
            <label for="Genre">Genre</label><br>
            <input type="text" id="genre" name="genre" value="<%= post.genre %>"><br>
            <label for="blogcontent">Body</label><br>
            <textarea class="form-control" name="blogcontent" cols="40" rows="5" style="border-color: black; border-width: 2px;"><%= post.body %></textarea>
            <button type="submit" class="createbtn btn btn-secondary rounded-pill px-3" style="margin-top: 10px;">Submit</button>
        </form>
    </div>
</div>    
